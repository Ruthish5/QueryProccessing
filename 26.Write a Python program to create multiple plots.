import matplotlib.pyplot as plt
import numpy as np
x = np.linspace(0, 10, 100)
y1 = np.sin(x)
y2 = np.cos(x)
y3 = np.tan(x)
plt.figure(figsize=(10, 6))
plt.subplot(2, 2, 1)
plt.plot(x, y1, color='blue')
plt.title('Sine')
plt.xlabel('x')
plt.ylabel('sin(x)')
plt.subplot(2, 2, 2)
plt.plot(x, y2, color='green')
plt.title('Cosine')
plt.xlabel('x')
plt.ylabel('cos(x)')
plt.subplot(2, 1, 2)
plt.plot(x, y3, color='red')
plt.title('Tangent')
plt.xlabel('x')
plt.ylabel('tan(x)')
plt.ylim(-10, 10)
plt.tight_layout()
plt.show()
