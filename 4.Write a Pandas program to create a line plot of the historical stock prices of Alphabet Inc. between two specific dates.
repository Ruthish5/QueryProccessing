import pandas as pd
import numpy as np
df = pd.DataFrame(np.random.randn(10, 4), columns=['A', 'B', 'C', 'D'])
def mark_negatives(df):
    df = df.copy()
    for col in df.columns:
        df[col] = df[col].apply(lambda x: f"\033[91m{x}\033[0m" if x < 0 else f"\033[30m{x}\033[0m")
    return df
print(mark_negatives(df))
