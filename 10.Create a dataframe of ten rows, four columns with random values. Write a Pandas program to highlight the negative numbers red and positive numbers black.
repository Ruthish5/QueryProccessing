import pandas as pd
import numpy as np
np.random.seed(42)
data = np.random.randn(10, 4)
df = pd.DataFrame(data, columns=['A', 'B', 'C', 'D'])
def highlight_numbers(val):
    return 'color: red;' if val < 0 else 'color: blue;'
styled_df = df.style.map(highlight_numbers)
styled_df.to_html('C:/Users/pedda/Downloads/some.html')
print("Styled DataFrame saved to 'styled_output.html'. Open this file in a web browser to see the styling.")
